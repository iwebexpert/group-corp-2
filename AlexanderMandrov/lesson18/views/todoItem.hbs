<div class="card text-center mx-auto " style="width: 18rem;">
    <div class="card-body card-header">
        <h2 class="card-title text-primary">{{todo.label}}</h2>
    </div>
    <ul class="list-group list-group-flush">
        {{#if todo.done}}
        <li class="list-group-item text-success"><h4>done: {{todo.done}}</h4></li>
        {{else}}
        <li class="list-group-item text-danger"><h4>done: {{todo.done}}</h4></li>
        {{/if}}
        <li class="list-group-item text-primary"><h7>created: {{todo.created}}</h7></li>
    </ul>
    <div class="card-body card-footer">
        <h2><a href="/todo" class="text-warning">All todos</a></h2>
    </div>
</div>