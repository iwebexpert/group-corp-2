<form action="/complete" method="post">
{{#if completed}}
	<input type="checkbox" checked name="completed">
	<span class="completed">{{title}}</span>
{{else}}
	<input type="checkbox" name="completed">
	<span>{{title}}</span>
{{/if}}
<input type="hidden" value="{{_id}}" name="id"> <!-- Для конкертного инпута-->
<button class="waves-effect waves-light btn-small add" type="submit">Save</button>
</form>